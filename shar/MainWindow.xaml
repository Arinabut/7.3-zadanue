<Window x:Class="PulsarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пульсар" Height="350" Width="350">
    <Grid>
        <Ellipse x:Name="circle" Width="200" Height="200">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Red" Offset="0"/>
                    <GradientStop Color="#FFE6FF00" Offset="0.842"/>
                    <GradientStop Color="#FFF9FFC2" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Button Click="Button_Click" Content="Нажми для изменения размера" Margin="0,0,234,287"/>
    </Grid>
    
</Window>